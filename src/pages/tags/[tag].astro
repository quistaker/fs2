---
import BaseLayout from '../../layouts/BaseLayout.astro';
import StatementItem from '../../components/StatementItem.astro';

export async function getStaticPaths() {
  const allStatements = Object.values(import.meta.glob('../finalStatements/*.md', { eager: true }));
  console.log(allStatements)
  const uniqueTags = [...new Set(allStatements.map((statement: any) => statement.frontmatter.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredStatements = allStatements.filter((statement: any) => statement.frontmatter.tags.includes(tag));
    return {
      params: { tag },
      props: { statements: filteredStatements },
    };
  });
}

const { tag } = Astro.params;
const { statements } = Astro.props;

---
<BaseLayout pageTitle={tag}>
    <ul>
      {statements.map((statement: any) => <StatementItem url={statement.url} title={statement.frontmatter.title}/>)}
    </ul>
</BaseLayout>

