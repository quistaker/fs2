---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "tags";
const allStatements = Object.values(import.meta.glob('../finalStatements/*.md', { eager: true }));
const tags = [...new Set(allStatements.map((statement: any) => statement.frontmatter.tags).flat())];
---

<BaseLayout pageTitle={pageTitle}>
	<div class="tags">
  	{tags.map((tag: string) => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}
  </div>
</BaseLayout>
<style>
a {
  color: #00539F;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  margin: 0.25em;
  border: dotted 1px #a1a1a1;
  border-radius: .5em;
  padding: .5em 1em;
  font-size: 1.15em;
  background-color: #F8FCFD;
}
</style>